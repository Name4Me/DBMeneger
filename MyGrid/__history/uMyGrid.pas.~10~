unit uMyGrid;

interface

uses
  Windows,SysUtils, Classes, Controls, Grids,Graphics,Dialogs;

type
  TMyGrid = class(TStringGrid)
  private
    { Private declarations }
  protected
    { Protected declarations }
  public
    Stretch:integer;
    FielList:TStrings;  constructor create;
    { Public declarations }
  published

    { Published declarations }
  
  Destructor Destroy; overload;
  
  procedure DrawCell(ACol, ARow: Longint; ARect: TRect;
      AState: TGridDrawState);
  end;

procedure Register;

implementation

procedure Register;
begin
  RegisterComponents('Standard', [TMyGrid]);
end;
{ TMyGrid }

constructor TMyGrid.Create;
begin
  inherited;
  Stretch:=-1;
  FielList:=TStringList.Create;
end;

destructor TMyGrid.Destroy;
begin
  if FielList<>nil then FielList.Free;
  inherited;
end;

procedure TMyGrid.DrawCell(ACol, ARow: Integer; ARect: TRect;
  AState: TGridDrawState);
begin
  inherited;
  ShowMessage(IntToStr(ACol));
  //if ARow mod 2 = 0 then
  Canvas.Brush.Color:=ClGreen;
  Canvas.FillRect(ARect);
  

end;

Begin

end.
